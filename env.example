# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Application Configuration
APP_NAME=ai-compliance-shepherd
APP_VERSION=1.0.0

# Database Configuration
DYNAMODB_TABLE_PREFIX=compliance-shepherd
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST

# S3 Configuration
S3_BUCKET_PREFIX=compliance-shepherd
S3_REPORTS_BUCKET=compliance-shepherd-reports
S3_ARTIFACTS_BUCKET=compliance-shepherd-artifacts

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_KNOWLEDGE_BASE_ID=your-knowledge-base-id

# API Configuration
API_GATEWAY_STAGE=dev
API_KEY_REQUIRED=false

# Integrations (Optional)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
JIRA_API_TOKEN=your-jira-api-token
JIRA_BASE_URL=https://your-domain.atlassian.net

# Security
ENCRYPTION_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/your-kms-key-id
SECRETS_MANAGER_SECRET_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:your-secret

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/lambda/compliance-shepherd
XRAY_TRACING_ENABLED=true

# Feature Flags
ENABLE_AUTO_REMEDIATION=false
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_AUDIT_PACK_GENERATION=true

# Rate Limiting
SCAN_RATE_LIMIT=10
API_RATE_LIMIT=100

# Retention Policies
FINDINGS_RETENTION_DAYS=90
REPORTS_RETENTION_DAYS=365
AUDIT_LOGS_RETENTION_DAYS=2555
