{
  "name": "@ai-compliance-shepherd/xray-tracing",
  "version": "1.0.0",
  "description": "X-Ray tracing service for AI Compliance Shepherd platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "package": "npm run build && zip -r xray-tracing.zip dist/ node_modules/ package.json"
  },
  "dependencies": {
    "@ai-compliance-shepherd/shared": "workspace:*",
    "@aws-sdk/client-xray": "^3.450.0",
    "@aws-sdk/client-cloudwatch": "^3.450.0",
    "@aws-sdk/client-lambda": "^3.450.0",
    "aws-xray-sdk-core": "^3.5.1",
    "aws-xray-sdk-express": "^3.5.1",
    "uuid": "^9.0.0",
    "zod": "^3.22.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "typescript": "^5.0.0",
    "jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "aws-sdk-mock": "^5.2.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
