{
  "name": "@ai-compliance-shepherd/analyze-terraform-plan",
  "version": "1.0.0",
  "description": "Terraform plan analyzer for IaC shift-left scanning and compliance validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "package": "npm run build && zip -r analyze-terraform-plan.zip dist/ node_modules/"
  },
  "dependencies": {
    "@ai-compliance-shepherd/shared": "workspace:*",
    "@ai-compliance-shepherd/compliance-rules-engine": "workspace:*",
    "@ai-compliance-shepherd/data-access-layer": "workspace:*",
    "aws-sdk": "^2.1500.0",
    "aws-lambda": "^1.0.7",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "hcl-parser": "^0.0.1",
    "jsonpath": "^1.1.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/jest": "^29.0.0",
    "@types/lodash": "^4.14.0",
    "@types/uuid": "^9.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "aws-sdk-mock": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
