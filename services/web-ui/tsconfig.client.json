{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist/client",
    "rootDir": "./src/client"
  },
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
