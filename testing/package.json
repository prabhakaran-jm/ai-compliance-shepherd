{
  "name": "@ai-compliance-shepherd/testing",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for AI Compliance Shepherd",
  "private": true,
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "cd unit-tests && jest",
    "test:unit:watch": "cd unit-tests && jest --watch",
    "test:unit:coverage": "cd unit-tests && jest --coverage",
    "test:unit:ci": "cd unit-tests && jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:integration": "cd integration-tests && npm test",
    "test:integration:ci": "cd integration-tests && npm run test:ci",
    "test:integration:workflows": "cd integration-tests && npm run test:workflows",
    "test:integration:services": "cd integration-tests && npm run test:services",
    "test:e2e": "cd e2e-tests && playwright test",
    "test:e2e:headed": "cd e2e-tests && playwright test --headed",
    "test:performance": "cd performance-tests && artillery run artillery.yml",
    "test:security": "npm run test:security:zap && npm run test:security:snyk",
    "test:security:zap": "echo 'Running OWASP ZAP security tests...'",
    "test:security:snyk": "snyk test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:all:ci": "npm run test:unit:ci && npm run test:integration:ci && npm run test:e2e",
    "coverage:report": "cd unit-tests && jest --coverage && open coverage/lcov-report/index.html",
    "coverage:merge": "istanbul-merge --out reports/coverage/merged-coverage.json unit-tests/coverage/coverage-final.json integration-tests/coverage/coverage-final.json",
    "setup:test-env": "./scripts/setup-test-environment.sh",
    "cleanup:test-data": "./scripts/cleanup-test-data.sh",
    "lint:tests": "eslint **/*.test.ts **/*.spec.ts",
    "format:tests": "prettier --write **/*.test.ts **/*.spec.ts",
    "validate:tests": "npm run lint:tests && npm run format:tests",
    "install:browsers": "cd e2e-tests && playwright install",
    "install:deps": "npm install && cd unit-tests && npm install && cd ../integration-tests && npm install && cd ../e2e-tests && npm install",
    "pre-commit": "npm run validate:tests && npm run test:unit:ci"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-plugin-jest": "^27.6.0",
    "istanbul-merge": "^2.0.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-kms": "^3.450.0",
    "@aws-sdk/client-lambda": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "@playwright/test": "^1.40.0",
    "artillery": "^2.0.0",
    "aws-sdk-mock": "^5.8.0",
    "aws-xray-sdk-core": "^3.5.1",
    "localstack": "^2.3.2",
    "snyk": "^1.1254.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.2.2"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit-tests",
        "testMatch": ["<rootDir>/unit-tests/**/*.test.ts"],
        "preset": "ts-jest",
        "testEnvironment": "node"
      },
      {
        "displayName": "integration-tests",
        "testMatch": ["<rootDir>/integration-tests/**/*.test.ts"],
        "preset": "ts-jest",
        "testEnvironment": "node"
      }
    ],
    "collectCoverageFrom": [
      "../services/**/*.ts",
      "../security/**/*.ts",
      "../monitoring/**/*.ts",
      "../shared/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/*.config.ts",
      "!**/*.test.ts",
      "!**/*.spec.ts"
    ],
    "coverageDirectory": "reports/coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-compliance-shepherd/ai-compliance-shepherd.git",
    "directory": "testing"
  },
  "bugs": {
    "url": "https://github.com/ai-compliance-shepherd/ai-compliance-shepherd/issues"
  },
  "homepage": "https://github.com/ai-compliance-shepherd/ai-compliance-shepherd#readme"
}
